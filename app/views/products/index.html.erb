<h2 class='text-2xl py-4 text-teal-700 font-semibold'><%= t '.title' %></h2>

<div class='flex flex-wrap mb-4 -mx-1 lg:-mx-4'>
  <% @products.each do |product| %>
    <div class='my-2 px-2 w-full md:w-1/2 md:my-3 md:px-3 lg:my-4 lg:px-4 lg:w-1/3'>
      <div class='product bg-white rounded-md shadow-md overflow-hidden'>
        <img src='https://via.placeholder.com/450x250' class='object-cover w-full' />
        <h3 class='product__header p-4 font-semibold'><%= product.name %></h3>
      </div>
    </div>
  <% end %>
</div>
