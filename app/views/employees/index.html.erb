<h2 class='employees__header text-2xl py-4 text-teal-700 font-semibold'><%= t '.title' %></h2>

<p class='employees__welcome text-xl font-light pb-4'><%= t '.welcome', name: current_user.name %></p>

<div class='flex flex-wrap'>
  <div class='w-full md:w-1/2 lg:w-1/2 bg-white rounded-md shadow-md border overflow-hidden'>
    <h3 class='text-2xl font-bold px-4 py-2'><%= t '.recent_orders.header' %></h3>
    <table class='generic-table zebra'>
      <thead>
        <tr>
          <th><%= t '.recent_orders.table.fulfilled' %></th>
          <th><%= t '.recent_orders.table.order_id' %></th>
          <th class='number'><%= t '.recent_orders.table.order_amount' %></th>
        </tr>
      </thead>
      <tbody>
        <% @recent_orders.each_with_index do |order, i| %>
          <tr data-id='order-<%= order.id %>'>
            <td>
              <span class='px-2 py-1 rounded-md text-xs shadow-sm <%= order_status_class(order) %>'>
                <%= order_status(order) %>
              </span>
            </td>
            <td>
              <div>
                <%= link_to order_path(order) do %>
                  <%= t '.recent_orders.table.order_id_value', id: order.id %>
                <% end %>
              </div>
              <div class='text-xs text-gray-400'>
                <%= order.ships_to.recipient %>
              </div>
            </td>
            <td class='number'>
              <div>
                <%= humanized_money_with_symbol order.cost %>
              </div>
              <div class='metadata'>
                <%= t '.recent_orders.table.product_count', count: order.line_items.sum(:quantity) %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
